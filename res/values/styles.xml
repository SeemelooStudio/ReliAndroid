<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="labStyle" parent="@android:style/TextAppearance">
	   <item name="android:textColor">#444</item>
	   <item name="android:textSize">14sp</item> 
    </style>
    <style name="txtStyle" parent="@android:style/TextAppearance">
	   <item name="android:textColor">#000</item>
    </style>
    <style name="mainTitleStyle" parent="@android:style/TextAppearance">
	   <item name="android:textColor">@color/white</item>
    </style>
    <style name="mainTileStyle">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <!-- Themes -->
    <style name="CustomTheme" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomThemeNoActionBar" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- ActionBar styles -->
    <style name="BlueActionBar"
           parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_blue</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Button styles -->
    <style name="NormalButton" parent="@android:style/Widget.DeviceDefault.Light.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="LinkButton" parent="@style/NormalButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/dim_gray</item>
    </style>
    <style name="PrimaryButton" parent="@style/NormalButton">
        <item name="android:background">@color/main_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>