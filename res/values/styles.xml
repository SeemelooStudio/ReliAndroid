<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="labStyle" parent="@android:style/TextAppearance">
	   <item name="android:textColor">#444</item>
	   <item name="android:textSize">14sp</item> 
    </style>
    <style name="txtStyle" parent="@android:style/TextAppearance">
	   <item name="android:textColor">#000</item>
    </style>
    <style name="mainTitleStyle" parent="@android:style/TextAppearance">
	   <item name="android:textColor">@color/white</item>
    </style>
    <style name="mainTileStyle">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <!-- Themes -->
    <style name="CustomTheme" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
    <style name="CustomThemeNoActionBar" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
    <style name="CustomThemeDark" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ActionBar styles -->
    <style name="BlueActionBar"
           parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_blue</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:icon">@drawable/main_item_one_image</item>
        <item name="android:titleTextStyle">@style/BlueActionBarTitle</item>
    </style>
    
    <style name="BlueActionBarTitle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/white</item>
    </style>
    <!-- Button styles -->
    <style name="NormalButton" parent="@android:style/Widget.DeviceDefault.Light.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="LinkButton" parent="@style/NormalButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/dim_gray</item>
    </style>
    <style name="PrimaryButton" parent="@style/NormalButton">
        <item name="android:background">@color/main_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Text styles -->
    <style name="whiteText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="grayText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent_white</item>
    </style>
    <style name="tableLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent_white</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/small_margin</item>
    </style>
    <!--  add by zhaors msg_up_page-->
    <style name="ChattingUISplit">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">#ff56616c</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">11.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ChattingUIText">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">200.0dip</item>
    </style>
    
    <style name="MMTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/mmtitle_bg</item>
    </style>
    
	<style name="MMTheme.Basic" parent="@android:style/Theme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">40.0dip</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:windowTitleBackgroundStyle">@style/MMTitleStyle</item>
    </style>
    
	<style name="NumberLabel">
	    <item name="android:background">@drawable/round_rect</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textSize">@dimen/small_font_size</item>
	</style>
    
     <!-- Hot Source Tile Style -->
    <style name="HotSourceSmallIcon">
        <item name="android:layout_width">@dimen/medium_icon_size</item>
        <item name="android:layout_height">@dimen/medium_icon_size</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
    </style>
    
    <style name="IndicatorFocused">
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/page_indicator_focused</item>
    </style>
    <style name="Indicator">
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/page_indicator</item>
    </style>
</resources>