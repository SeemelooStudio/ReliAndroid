<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_position_item_div"
    android:layout_margin="5dip"
	android:layout_width="100dp"
	android:layout_height="120dp"
	android:orientation="vertical">
	<LinearLayout 
	    android:layout_width="match_parent"  
	    android:layout_height="50dip"
	    android:orientation="horizontal">
	        <ImageView android:id="@+id/hotPosItemLeftImage"
			    android:layout_width="15dp"
			    android:layout_height="15dp"
			    android:layout_marginLeft="15dip"
			    android:layout_marginTop="10dip"
			    android:background="@drawable/hot_item_left"/>
	        <TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemLeftLabel"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="5dip"
			    android:text="今日"
			    android:textSize="12sp"
			    android:textColor="@color/white"/>
		   <TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemLeftText"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="5dip"
			    android:text="123.544"
			    android:textSize="12sp"
			    android:textColor="@color/white"/>
		   <TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemLeftTxtPa"
			    android:layout_marginLeft="-40dip"
			    android:layout_marginTop="20dip"
			    android:text="1.35MPa"
			    android:textSize="10sp"
			    android:textColor="@color/white"/>
	   </LinearLayout>
	   <LinearLayout 
		    android:layout_width="match_parent"  
		    android:layout_height="50dip"
		    android:layout_marginTop="30dip"
		    android:orientation="horizontal">
		    <ImageView  android:id="@+id/hotPosItemRightImage"
			    android:layout_width="15dp"
			    android:layout_height="15dp"
			    android:layout_marginLeft="15dip"
			    android:layout_marginTop="10dip"
			    android:background="@drawable/hot_item_right"/>
		    <TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemRightLabel"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:text="昨日"
			    android:textSize="12sp"
			    android:textColor="@color/white"/>
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemRightText"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:text="89.544"
			    android:textSize="12sp"
			    android:textColor="@color/white"/>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemRightTxtPa"
			    android:layout_marginLeft="-40dip"
			    android:layout_marginTop="25dip"
			    android:text="1.35MPa"
			    android:textSize="10sp"
			    android:textColor="@color/white"/>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotPosItemRightTxtPa2"
			    android:layout_marginLeft="20dip"
			    android:layout_marginTop="25dip"
			    android:text="1.35MPa"
			    android:textSize="10sp"
			    android:textColor="@color/white"
			    />
 		</LinearLayout>
	   	<LinearLayout
		    android:layout_width="match_parent"  
		    android:layout_height="wrap_content"
		    android:layout_marginTop="85dip"
		    android:orientation="horizontal"
		    android:gravity="center">
		   <TextView  android:id="@+id/hotPosItemTitle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="5dip"
			    android:text="XXS热源站"
			    android:textSize="18sp"
			    android:textColor="@color/white"/>
		   <TextView  android:id="@+id/hotPosItemId" 
		         		android:layout_width="0dp"
			    		android:layout_height="0dp"
		              	android:visibility="gone"/>"
		</LinearLayout>
</RelativeLayout>