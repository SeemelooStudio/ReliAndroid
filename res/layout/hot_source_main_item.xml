<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/hot_source_item_div"
     android:layout_margin="5dip"
	android:layout_width="100dp"
	android:layout_height="125dp"
	android:background="@drawable/boder"
	android:orientation="vertical">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	    android:layout_width="match_parent"  
	    android:layout_height="50dip"
	    android:orientation="horizontal">
	        <ImageView android:id="@+id/hotSrcItemLeftImage"
			    android:layout_width="15dp"
			    android:layout_height="15dp"
			    android:layout_marginLeft="15dip"
			    android:layout_marginTop="15dip"
			    android:background="@drawable/hot_item_left"/>
		   <TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotSrcItemLeftText"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:text="123.544"
			    android:textSize="15sp"/>
		   <TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotSrcItemLeftTxtPa"
			    android:layout_marginLeft="-40dip"
			    android:layout_marginTop="30dip"
			    android:text="1.35MPa"
			    android:textSize="12sp"/>
	   </LinearLayout>
	   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
		    android:layout_width="match_parent"  
		    android:layout_height="50dip"
		    android:layout_marginTop="40dip"
		    android:orientation="horizontal">
		    <ImageView  android:id="@+id/hotSrcItemRightImage"
			    android:layout_width="15dp"
			    android:layout_height="15dp"
			    android:layout_marginLeft="15dip"
			    android:layout_marginTop="15dip"
			    android:background="@drawable/hot_item_right"/>
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotSrcItemRightText"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:text="89.544"
			    android:textSize="15sp"/>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/hotSrcItemRightTxtPa"
			    android:layout_marginLeft="-40dip"
			    android:layout_marginTop="30dip"
			    android:text="1.35MPa"
			    android:textSize="12sp"/>
 		</LinearLayout>
	   	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
		    android:layout_width="match_parent"  
		    android:layout_height="wrap_content"
		    android:layout_marginTop="95dip"
		    android:orientation="horizontal"
		    android:gravity="center">
		   <TextView  android:id="@+id/hotSrcItemTitle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="5dip"
			    android:text="XXS热源站"
			    android:textSize="18sp"/>
		   <TextView  android:id="@+id/hotSrcItemId" 
		         		android:layout_width="0dp"
			    		android:layout_height="0dp"
		              	android:visibility="gone"/>"
		</LinearLayout>
</RelativeLayout>