<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/twoTabLeftInfo"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:padding="5dip" >

                <TextView
                    android:id="@+id/txtTwoTab1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="20sp" >
                </TextView>

                <TextView
                    android:id="@+id/txtTwoTab2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTwoTab1"
                    android:text="XXXX气象站"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/txtTwoTab3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTwoTab2"
                    android:lines="6"
                    android:text="温度，风速，风向，时间等"
                    android:textSize="12sp" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/twoTabRightInfo"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dip" >

                <ImageView
                    android:id="@+id/twoTempImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drizzle2" />
            </RelativeLayout>
        </LinearLayout>
        <ListView
                android:id="@+id/twoTabList"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scrollbarStyle="outsideOverlay" >
        </ListView>

</LinearLayout>