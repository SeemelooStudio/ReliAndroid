<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >
    <RelativeLayout
        android:id="@+id/main_page_item3"
        android:layout_width="125dp"
        android:layout_height="115dp"
        android:layout_below="@id/main_page_item1"
        android:layout_marginTop="5dip"
        android:background="@drawable/main_item_bg_2" >
        <ImageView
            android:id="@+id/main_item_three_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/main_item_three_image" />
        <TextView
            android:id="@+id/main_item_three_txt1"
            style="@style/mainTitleStyle"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="50dip"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="-10/1" 
            android:textSize="18sp"/>             
        <TextView
            android:id="@+id/main_item_three_txt2"
            style="@style/mainTitleStyle"
            android:layout_marginLeft="50dip"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_below="@id/main_item_three_txt1"
            android:text="北京23日"
            android:textSize="12sp" />
       <TextView
            android:id="@+id/main_item_three_txt3"
            style="@style/mainTitleStyle"
            android:layout_marginLeft="50dip"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_below="@id/main_item_three_txt2"
            android:text="晴转阴  微风"
            android:textSize="12sp" /> 
        <TextView
            style="@style/mainTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_item_three_image"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="20dip"
            android:text="@string/main_item_three_name" />
    </RelativeLayout>
</RelativeLayout>