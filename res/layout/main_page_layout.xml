<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/main_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_page_bg"
    android:orientation="horizontal">
    
    <com.ctral.MainScrollLayout
        android:id="@+id/mainScrollLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >
	                        <TextView
	                            android:layout_width="fill_parent"
	                            android:layout_height="wrap_content"
	                            android:layout_marginBottom="@dimen/medium_margin"
	                            android:layout_marginTop="@dimen/large_margin"
	                            android:layout_marginLeft="@dimen/medium_margin"
	                            android:textColor="@color/white"
	                            android:text="@string/app_name"/>
	                        <FrameLayout
	                            android:layout_width="fill_parent"
	                            android:layout_height="0.0px"
	                            android:layout_weight="1.0"
	                            android:orientation="horizontal" >
	                            <android.support.v4.view.ViewPager
	                                android:id = "@+id/pager"
	                                android:layout_marginLeft="@dimen/medium_margin"
	                                android:layout_marginRight="45dp"
	                                android:layout_width="fill_parent"
	                                android:layout_height="fill_parent"/>
			                    <RelativeLayout
		                                android:layout_width="65.0dip"
		                                android:layout_height="fill_parent"
		                                android:layout_gravity="right"
		                                android:layout_marginBottom="@dimen/medium_margin"
		                                android:gravity="center_horizontal" >
		
		                                <ImageView
		                                    android:id = "@+id/settingMenu"
		                                    android:layout_width="wrap_content"
		                                    android:layout_height="wrap_content"
		                                    android:clickable="true"
                       						 android:focusable="true"
		                                    android:layout_alignParentBottom="true"
		                                    android:background="@drawable/selector_menu_btn"
		                                    android:padding="@dimen/medium_margin"
		                                    android:src="@drawable/setting_normal" />
		
		                                <FrameLayout
		                                    android:id = "@+id/main_bg_layout"
		                                    android:layout_width="wrap_content"
		                                    android:layout_height="wrap_content"
		                                    android:layout_above="@id/settingMenu"
		                                    android:layout_marginBottom="@dimen/medium_margin"
		                                    android:background="@drawable/selector_main_bg_icon" >
		
		                                    <ImageView
		                                        android:id = "@+id/userMenu"
		                                        android:layout_width="wrap_content"
		                                        android:layout_height="wrap_content"
		                                        android:clickable="true"
                       						     android:focusable="true"
		                                        android:background="@drawable/selector_menu_btn"
		                                        android:padding="@dimen/medium_margin"
		                                        android:src="@drawable/main_bg_normal" />

		                                </FrameLayout>
		                                <ImageView
		                                    android:id = "@+id/main_page_menu"
		                                    android:layout_width="wrap_content"
		                                    android:layout_height="wrap_content"
		                                    android:layout_above="@id/main_bg_layout"
		                                    android:layout_marginBottom="15.0dip"
		                                    android:background="@drawable/selector_menu_btn"
		                                    android:padding="10.0dip"
		                                    android:src="@drawable/main_menu_normal" />
		                            </RelativeLayout>
		                 
	                        </FrameLayout>
	                        	<RelativeLayout 
						    android:id="@+id/login_div" 
						    android:layout_width="fill_parent" 
						    android:layout_height="60dp"
						    android:layout_marginLeft="@dimen/medium_margin"
						    android:orientation="horizontal">
					   		<TextView android:id="@+id/labShowMsg" 
						        	android:layout_width="255dp" 
						        	android:layout_height="match_parent"
					               android:background="@color/transparent_black"
						        	android:text="海淀区温度" 
						        	style="@style/mainTitleStyle"/> 
						        	<TextView
					                    android:id = "@+id/txtViewGroup"
					                    android:layout_height="25dp"
					                    android:layout_width="25dp"
					                    android:paddingTop="4.0dip"
					                    android:paddingLeft="3.0dip"
								     android:layout_marginTop="15.0dip"
								     android:layout_marginLeft="260dip"
								     android:background="@drawable/main_bg_normal_bg"
								     android:textSize="11sp">
			                		</TextView> 
						</RelativeLayout>
						
                       </LinearLayout>
                </LinearLayout>
             
            </LinearLayout>
            <FrameLayout
                android:id = "@+id/main_page_mask"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="fill_parent"
                android:background="@drawable/disk_second_mask_bg"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="65.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20.0dip"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id = "@+id/main_mask_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="27.0dip"
                        android:src="@drawable/setting_normal"
                        android:visibility="invisible" />

                    <ImageView
                        android:id = "@+id/main_mask_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/main_mask_setting"
                        android:layout_marginBottom="15.0dip"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10.0dip"
                        android:src="@drawable/main_menu_negative_normal"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/main_mask_bg"
                        android:layout_marginBottom="17.0dip"
                        android:padding="10.0dip"
                        android:src="@drawable/main_menu_negative_normal" />
                </RelativeLayout>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/black_bg_repeat" >

            <LinearLayout
                android:id = "@+id/right_menu"
                android:layout_width="91.0dip"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id = "@+id/right_page"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id = "@+id/conect_menu"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginRight="8.0dip"
                            android:layout_marginTop="20.0dip"
                            android:background="@drawable/selector_menu_btn"
                            android:drawablePadding="5.0dip"
                            android:drawableTop="@drawable/conect_menu_normal"
                            android:gravity="center"
                            android:paddingBottom="3.0dip"
                            android:paddingTop="3.0dip"
                            android:text="联系我们"
                            android:clickable="true"
                        	   android:focusable="true"
                            android:textColor="@color/white"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id = "@+id/help_menu"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginRight="8.0dip"
                            android:layout_marginTop="20.0dip"
                            android:background="@drawable/selector_menu_btn"
                            android:drawablePadding="5.0dip"
                            android:drawableTop="@drawable/help_menu_normal"
                            android:gravity="center"
                            android:paddingBottom="3.0dip"
                            android:paddingTop="3.0dip"
                            android:text="帮助"
                            android:clickable="true"
                        	   android:focusable="true"
                            android:textColor="@color/white"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id = "@+id/main_about"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginRight="8.0dip"
                            android:layout_marginTop="20.0dip"
                            android:background="@drawable/selector_menu_btn"
                            android:drawablePadding="5.0dip"
                            android:drawableTop="@drawable/main_about_normal"
                            android:gravity="center"
                            android:paddingBottom="3.0dip"
                            android:paddingTop="3.0dip"
                            android:clickable="true"
                        	   android:focusable="true"
                            android:text="版本信息"
                            android:textColor="@color/white"
                            android:textSize="14.0sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="28.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/black_bg_shadow_repeat" />
        </FrameLayout>
    </com.ctral.MainScrollLayout>
</LinearLayout>
