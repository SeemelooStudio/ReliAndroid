<?xml version="1.0" encoding="utf-8"?>   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_height"
    android:orientation="horizontal">
	<TextView android:id="@+id/list_station_id"
	    android:layout_width="@dimen/number_label_width"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="@dimen/small_margin"
	    android:layout_marginLeft="@dimen/medium_margin"
	    style="@style/NumberLabel" />
	<TextView android:id="@+id/list_station_name"
	    android:layout_width="120dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="@dimen/small_margin"
	    android:textColor="@color/white"  />
	<TextView android:id="@+id/list_station_tempreture"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="@dimen/small_margin"
	    android:textColor="@color/white"  />
	 <TextView android:id="@+id/list_station_other"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="@dimen/small_margin"
	    android:textColor="@color/transparent_white"
	    android:textSize="@dimen/small_font_size" />
</LinearLayout>