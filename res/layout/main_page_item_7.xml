<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >
    <RelativeLayout
        android:id="@+id/main_page_item7"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:background="@color/main_blue" >

        <ImageView
            android:id="@+id/main_item_image7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="30dip"
            android:src="@drawable/main_item_serven_image"
            android:contentDescription="@string/knowledge_base" />

        <TextView
            style="@style/mainTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_item_image7"
            android:layout_marginLeft="32dip"
            android:layout_marginTop="10dip"
            android:text="@string/knowledge_base" />
    </RelativeLayout>
</RelativeLayout>